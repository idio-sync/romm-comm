# .env

# Required Settings
TOKEN=YOURBOTTOKEN                        # Bot token from Discord developer panel
GUILD=YOURSERVERID                        # ID of your discord server
API_URL=http://romm_ip:romm_port          # Your local Romm URL (IP and port)
USER=username                             # Romm user id that will be used for API lookups
PASS=password                             # Romm password that will be used for API lookups

# Optional Settings
ADMIN_ID=YOURADMINID                      # Discord ID that can run admin commands
DOMAIN=https://yourdomain.com             # Your remote domain (if you want to create download links accessable from the internet)
UPDATE_VOICE_NAMES=TRUE                   # Update voice channels with stats from Romm's "stats" api endpoint (default: true)
REQUESTS_ENABLED=TRUE                     # Enable request system (default: true)
IGDB_CLIENT_ID=YOURCLIENTID               # IGDB login info for requests metadata (can be the same one used in RomM)
IGDB_CLIENT_SECRET=YOURCLIENTSECRET       # IGDB login info for requests metadata (can be the same one used in RomM)
ENABLE_USER_MANAGER=TRUE                  # Enable user management module (default: true)
AUTO_REGISTER_ROLE_ID=romm_users_role_id  # Role ID that you want to assign users to link/create RomM accounts
RECENT_ROMS_ENABLED=TRUE                  # Enable/disable recent rom notifications
RECENT_ROMS_CHANNEL_ID=YOURCHANNELID      # Channel ID that will recieve recently added ROM notifications
RECENT_ROMS_MAX_PER_POST=10               # How many ROM name rows should display (default: 10)
RECENT_ROMS_BULK_THRESHOLD=25             # How many ROM name rows are displayed before platform/Rom # summary shows (default: 25)
SHOW_API_SUCCESS=FALSE                    # Bot will send a message to channel below with status of API updates (mainly for debugging connection issues to Romm)
CHANNEL_ID=YOURCHANNELID                  # Where the bot will post API and user manager role assignment updates (if enabled above)
SYNC_RATE=3600                            # How often to sync with API in seconds (default: 3600)
CACHE_TTL=3900                            # Cache time-to-live in seconds, set over an hour in case there is a delay in the automatic refresh (default: 3900)
API_TIMEOUT=10                            # API request timeout in seconds (default: 10)

